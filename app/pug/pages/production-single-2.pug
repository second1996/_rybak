extends ../common/layout

block vars
	- var title = 'Куряча ковбаса варена'

block content
	main.page-main

		+b.SECTION.page-heading(data-aos="fade-up")
			.container
				+b.breadcrumbs
					+e.list
						li
							a(href="home.html")
								+icon('home')
								span Головна
						li
							a(href="production.html") Продукція ТМ "Рибак"
						li
							a(href="production-catalog.html") Готова продукція
						li
							span Куряча ковбаса варена
				+b.H1.title.w-bold Куряча ковбаса варена

		// Section: Production single
		+b.SECTION.pd-single.section
			.container
				+e.wrapper.row.row-items-60

					// Product gallery slider
					.col-xl-5.col-xxl-6
						+e.gallery(data-aos="fade-up")
							.product-labels
								.label.label-new Новинка
								// .label.label-popular Популярне

							+e.gallery-wrapper

								+e.gallery-thumbs.swiper
									.swiper-wrapper
										.swiper-slide
											.product-thumb.img-cover
												img(src="./images/production/product-2.png" alt="Куряча ковбаса варена")
									.swiper-scrollbar

								+e.gallery-slider.swiper
									+e.gallery-dstu
										img(src="./images/dstu.png" title="ДСТУ 4435:2005" alt="ДСТУ 4435:2005")
									.swiper-wrapper
										.swiper-slide
											a.product-photo.img-cover(href="./images/production/product-single.jpg" data-fancybox)
												img(src="./images/production/product-2.png" alt="Куряча ковбаса варена")

					// Product meta
					.col-xl-7.col-xxl-6
						+e.meta(data-aos="fade-up" data-aos-delay="100")
							H1.title.text-dark.w-heavy Куряча ковбаса варена
							.descr
								p <b>Склад:</b> напівфабрикат м’ясний (шинка теляча) 100,0%
							+b.attributes.row.row-cols-2.row-cols-sm-3
								+e.item.col
									img.icon(src="./images/icons/specii.svg" alt="Тільки натуральні спеції")
									.name Тільки натуральні спеції
								+e.item.col
									img.icon(src="./images/icons/oven.svg" alt="Потрібно просто покласти в духовку")
									.name Потрібно просто покласти в духовку
								+e.item.col
									img.icon(src="./images/icons/ready-to-cook.svg" alt="Вже в пакеті для запікння")
									.name Вже в пакеті для запікння
							+b.order-buttons
								+e.A.btn.--telegram(href="#" target="_blank" rel="nofollow noopener")
									+icon('telegram')
									span Замовити в Telegram
								+e.A.btn.--viber(href="#" target="_blank" rel="nofollow noopener")
									+icon('viber')
									span Замовити в Viber

		// Section: Other products
		include production/other-products
