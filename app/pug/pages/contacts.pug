extends ../common/layout

block vars
	- var title = 'Контактна інформація'

block content
	main.page-main

		+b.SECTION.page-heading(data-aos="fade-up")
			.container
				+b.breadcrumbs
					+e.list
						li
							a(href="home.html")
								+icon('home')
								span Головна
						li
							span Контактна інформація
				+b.H1.title.w-bold Контактна інформація

		// Section: Contacts main
		+b.SECTION.contacts-main.section
			.container
				.row.justify-content-between
					.col-xl-6.col-xxl-5(data-aos="fade-up")
						+e.info
							.address
								h5.title.mb-16.text-xs.w-demi Центральний офіс
								a(href="https://goo.gl/maps/BrXCx8HPzcSQwxHd7" title="Перейти на Google Maps" target="_blank" rel="nofollow noopener") Івано-Франківська обл., Тисменицький р-н, с. Ямниця, вул. Галицька, 2Г.
							+b.offices
								+e.item
									h5.title.mb-16.text-xs.w-demi Відділ збуту
									.phone
										+phone("067 635 70 42")
									.phone
										+phone("067 341 03 00")
									.email
										+email("sale@tmrybak.com.ua")
								+e.item
									h5.title.mb-16.text-xs.w-demi Відділ закупок сировини
									.phone
										+phone("067 635 70 89")
									.email
										+email("postach@tmrybak.com.ua")
								+e.item
									h5.title.mb-16.text-xs.w-demi Адміністрація
									.phone
										+phone("067 340 58 01")
									.email
										+email("info@tmrybak.com.ua")
								+e.item
									h5.title.mb-16.text-xs.w-demi Відділ персоналу
									.phone
										+phone("095 147 48 71")
									.email
										+email("hr@tmrybak.com.ua")
							.feedback
								+btn-modal('#feedbackModal', 'Форма зворотнього зв’язку')
					.col-xl-6.d-none.d-sm-block(data-aos="fade-up" data-aos-delay="100")
						+e.map
							iframe(src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d2619.11371024608!2d24.7071802!3d48.9703598!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4730c114a7e39e73%3A0xf4f666138544fca1!2z0KLQnCDQoNC40LHQsNC6!5e0!3m2!1suk!2sua!4v1634812039050!5m2!1suk!2sua" allowfullscreen loading="lazy")

		// Section: Stores list
		include stores/google-map

block modals
	include modals/feedback

block scripts
	script(src="./js/google-maps/rybak-map-local.js")
	script(src="./js/google-maps/markerclusterer.js")
	script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDN-SxwIq2Kzkd9rcj52RkCoBCt0vF4gT8&callback=initMap&language=ua" async)