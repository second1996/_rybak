									+email("sale@tmrybak.com.ua")
						.col
							+e.item
								+e.SPAN.title.footer-suptitle Відділ закупок сировини
								.phone
									+phone("067 635 70 89")
								.email
									+email("postach@tmrybak.com.ua")
						.col
							+e.item
								+e.SPAN.title.footer-suptitle Адміністрація
								.phone
									+phone("067 340 58 01")
								.email
									+email("info@tmrybak.com.ua")
						.col
							+e.item
								+e.SPAN.title.footer-suptitle Відділ персоналу
								.phone
									+phone("095 147 48 71")
								.email
									+email("hr@tmrybak.com.ua")

